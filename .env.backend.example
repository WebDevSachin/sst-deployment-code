# Database Configuration
DATABASE_URL="mysql://app_user:STRONG_PASSWORD_HERE@localhost:3306/app_db"

# JWT Configuration
JWT_SECRET="production-jwt-secret-CHANGE-THIS-TO-RANDOM-STRING"
JWT_REFRESH_SECRET="production-refresh-secret-CHANGE-THIS-TOO"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
NODE_ENV="production"
PORT=8000
RUN_STARTUP_CHECKS="true"

# Frontend URL (for CORS)
FRONTEND_URL="https://yourdomain.com"

# API Base URL
API_BASE_URL="https://yourdomain.com"

# Email Configuration (optional - update with real credentials)
EMAIL_HOST="mail.example.com"
EMAIL_PORT=587
EMAIL_SECURE="false"
EMAIL_USER="noreply@yourdomain.com"
EMAIL_PASS="email_password"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="Your App Name"

# Database Settings
AUTO_SEED_ON_EMPTY=true
DB_CONNECTION_TIMEOUT=10000
DB_MAX_RETRIES=5
DB_POOL_SIZE=20
